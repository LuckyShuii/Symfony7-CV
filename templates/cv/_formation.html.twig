<section class="bg-gray-900 text-white">
    <div class="m-auto max-w-screen-xl sm:px-6 lg:px-8 mt-8">

        <div class="grid grid-cols-1 gap-8 md:grid-cols-2 md:gap-12 lg:grid-cols-3">
            {% for formation in cv.education %}
            <div class="flex items-start gap-4">
        <span class="shrink-0 rounded-lg bg-gray-800 p-4">
            {% if formation.img is not empty %}
                <img src="{{ asset(formation.img) }}" alt="Wild Code School" class="w-14 h-14">
            {% else %}
                  <svg
                          class="w-14 h-14"
                          fill="none"
                          stroke="currentColor"
                          viewBox="0 0 24 24"
                          xmlns="http://www.w3.org/2000/svg"
                  >
                    <path d="M12 14l9-5-9-5-9 5 9 5z"></path>
                    <path
                            d="M12 14l6.16-3.422a12.083 12.083 0 01.665 6.479A11.952 11.952 0 0012 20.055a11.952 11.952 0 00-6.824-2.998 12.078 12.078 0 01.665-6.479L12 14z"
                    ></path>
                    <path
                            stroke-linecap="round"
                            stroke-linejoin="round"
                            stroke-width="2"
                            d="M12 14l9-5-9-5-9 5 9 5zm0 0l6.16-3.422a12.083 12.083 0 01.665 6.479A11.952 11.952 0 0012 20.055a11.952 11.952 0 00-6.824-2.998 12.078 12.078 0 01.665-6.479L12 14zm-4 6v-7.5l4-2.222"
                    ></path>
                  </svg>
            {% endif %}
        </span>

                <div>
                    <h2 class="text-lg font-bold">{{ formation.school }}</h2>
                    <h3 class="text-sm font-semibold">{{ formation.name }}</h3>
                    <h4 class="text-sm mt-1">{{ formation.startDate }} - {{ formation.endDate }}</h4>

                    <p class="mt-3 text-sm text-gray-300">
                        {{ formation.summary }}
                    </p>
                </div>
            </div>
            {% endfor %}
        </div>
    </div>
</section>